{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                { "slug": "gt-white", "color": "rgb(255 255 255)", "name": "GT White" },
                { "slug": "gt-gray-100", "color": "rgb(243 244 246)", "name": "GT Gray 100" },
                { "slug": "gt-gray-200", "color": "rgb(229 231 235)", "name": "GT Gray 200" },
                { "slug": "gt-gray-300", "color": "rgb(209 213 219)", "name": "GT Gray 300" },
                { "slug": "gt-gray-400", "color": "rgb(156 163 175)", "name": "GT Gray 400" },
                { "slug": "gt-gray-500", "color": "rgb(107 114 128)", "name": "GT Gray 500" },
                { "slug": "gt-gray-600", "color": "rgb(75 85 99)", "name": "GT Gray 600" },
                { "slug": "gt-gray-700", "color": "rgb(55 65 81)", "name": "GT Gray 700" },
                { "slug": "gt-gray-800", "color": "rgb(31 41 55)", "name": "GT Gray 800" },
                { "slug": "gt-gray-900", "color": "rgb(17 24 39)", "name": "GT Gray 900" },
                { "slug": "gt-primary", "color": "rgb(239 68 68)", "name": "GT Primary" },
                { "slug": "gt-accent", "color": "rgb(67 56 202)", "name": "GT Accent" },
                { "slug": "gt-success", "color": "rgb(52 211 153)", "name": "GT Success" },
                { "slug": "gt-info", "color": "rgb(96 165 250)", "name": "GT Info" },
                { "slug": "gt-warning", "color": "rgb(251 146 60)", "name": "GT Warning" },
                { "slug": "gt-danger", "color": "rgb(236 72 153)", "name": "GT Danger" }
            ],
            "background": true,
            "text": true,
            "link": true,
            "custom": true,
            "duotone": [
                { "slug": "gt-pink-sunset", "colors": ["#11245e", "#dc4379"], "name": "GT Pink Sunset" }
            ],
            "defaultGradients": false,
            "gradients": [
                {"slug": "gt-summer-dog", "name": "GT Summer Dog", "gradient": "linear-gradient(#a8ff76, #78ffd6)"}
            ]
        },
        "blocks": {
            "core/site-title": {
                "color": {
                    "defaultPalette": true,
                    "palette": [
                        { "slug": "gt-primary", "color": "#ef4444", "name": "GT Primary"}
                    ],
                    "link": true,
                    "gradients": [],
                    "customGradient": false
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "fontFamily": "Pacifico, sans-serif", 
                            "slug": "gt-pacifico",
                            "name": "GT Pacifico"
                        }
                    ]
                }
            },
            "core/cover": {
                "color": {
                    "duotone": [],
                    "customDuotone": false
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false
                }
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Rubik, sans-serif", 
                    "slug": "gt-rubik",
                    "name": "GT Rubik"
                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.75rem", "name": "Small" },
                { "slug": "medium", "size": "1.25rem", "name": "Medium" },
                { "slug": "large", "size": "2.25rem", "name": "Large" },
                { "slug": "x-large", "size": "3rem", "name": "Extra-Large" },
                { "slug": "gigantic", "size": "3.75rem", "name": "Gigantic" }
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "textTransform": true,
            "letterSpacing": true,
            "textDecoration": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1100px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "blockGap": true
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--gt-gray-700)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--gt-primary)"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                   
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "2px",
                    "radius": "10px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--gt-primary)"
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--gt-pacifico)"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--gt-rubik)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "padding": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "blockGap": "4rem"
        }
    },
    "customTemplates": [
        {
            "name": "full-width-page",
            "title": "Full Width Page",
            "postTypes": [
                "page"
            ]
        }
    ]
}